{% for events in event %}

    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <img src="uploads/open-source-summit.jpg" alt="Open Source Summit">
            <div class="card-body">
                <h3 class="card-text">{{ events.title }}</h3>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="" class="btn btn-sm btn-outline-secondary">Voir</a>
                    </div>
                    <small class="text-muted">{{ events.city }} |  {{ events.dateStart|date('Y-m-d') }}</small>
                </div>
            </div>
        </div>
    </div>

{% endfor %}