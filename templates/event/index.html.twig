{% extends 'base.html.twig' %}

{% block title %}Liste des évènements{% endblock %}

{% block body %}
    <h1>Liste des évènements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Picture</th>
                <th>Description</th>
                <th>Date_start</th>
                <th>Date_end</th>
                <th>Url</th>
                <th>Price</th>
                <th>Is_valid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.slug }}</td>
                <td>{{ event.picture }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.dateStart ? event.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.dateEnd ? event.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.url }}</td>
                <td>{{ event.price }}</td>
                <td>{{ event.isValid ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('event_show', {'id': event.id}) }}">Voir plus</a>
                    <a href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('event_new') }}">Ajouter un évènement</a>
{% endblock %}
